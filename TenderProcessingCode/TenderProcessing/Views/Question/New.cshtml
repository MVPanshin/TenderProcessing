@using TenderProcessing.Objects
@model TenderProcessing.Models.Question

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("New", "Question", FormMethod.Post, new { @id = "queForm", @class = "form-horizontal", data_toggle = "validator", role = "form" }))
{
    <div class="form-group">
        <label class="col-lg-2 control-label" for="manager">Менеджер</label>
        <div class="col-lg-5">
            @Html.DropDownListFor(m => m.Manager.AdSid, DbList.GetManagerSelectionList(), "--выберите--", new { @class = "form-control required-mark", @id = "manager" })
            <span class="help-block with-errors"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label" for="dateLimit">Срок сдачи</label>
        <div class="col-lg-1">
            @Html.TextBoxFor(m => m.DateLimit, new { @class = "form-control required-mark datepicker-btn", @id = "dateLimit", required = "required", data_error = "Заполните Срок сдачи", data_mask = "00.00.0000" })
            <span class="help-block with-errors"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label" for="dateLimit">Комментарий</label>
        <div class="col-lg-5">
            @Html.TextAreaFor(m => m.Descr, new { @class = "form-control", @id = "dateLimit", @rows = "3" })
            <span class="help-block with-errors"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-push-2 col-lg-5">
            <button id="btnCreate" type="submit" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;добавить</button>
        </div>
        <p class="text-danger">
            @ViewData["ServerError"]
        </p>
    </div>
}

@section scripts
{
    <script type="text/javascript">

        $(document).ready(init);
        

        function init() {
            $("#dateLimit").datepicker({
                format: "dd.mm.yyyy",
                autoclose: true,
                todayBtn: "linked",
                language: "ru"
            });
            
        }
    </script>
}