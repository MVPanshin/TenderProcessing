@model IEnumerable<SpeCalcDataAccessLayer.ProjectModels.ProjectConditionModel>


<div class="">
    @foreach (var cond in Model)
    {
        <div cid="@cond.Condition.Id" pid="@cond.ProjectId" name="project-condition" class="project-condition-small-item pull-left marg-l-xs" style="background-color: #@(cond.ConditionHistory != null ? cond.ConditionHistory.ProjectConditions.BackgroundColor : null); border-color: #@cond.Condition.BorderColor; color: #@cond.Condition.ForegroundColor" data-toggle="popover" title="@(cond.ConditionHistory != null ? cond.Condition.Name : null)" data-content="@(cond.ConditionHistory != null ? cond.ConditionHistory.CreateDate.ToString("dd.MM.yyyy HH:mm") + " " + cond.ConditionHistory.CreatorName + " " + cond.ConditionHistory.Comment : null)"  data-trigger="hover"  data-placement="bottom">&nbsp;
        </div>
    }
</div>


