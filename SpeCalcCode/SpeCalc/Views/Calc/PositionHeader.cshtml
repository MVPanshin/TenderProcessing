@{
    bool IsTransneft = ViewBag.ClaimType != null && ViewBag.ClaimType == "TRANS";
}

<tr class="bg-primary">
    <th class="min-width  text-center">
        <input type="checkbox" id="calcPositionsCheckAll" data-toggle="tooltip" title="все" />
    </th>
    <th class="text-center"></th>
    @if (IsTransneft)
    {
        <th secol="secol">Срок поставки по договору</th>
        <th secol="secol">Бренд</th>
        <th>Реквизиты получателя</th>
        <th>ГОСТ, ТУ, ОСТ, опросный лист и пр.</th>
        <th>Максимальная цена по лоту с НДС</th>
    }
    <th>Каталожный номер</th>
    <th style="width: 250px;">
        Запрос
    </th>
    <th>Количество</th>
    <th>Продакт</th>
    <th>
        <button type='button' id='btnEditAll' class='btn btn-default' data-toggle='tooltip' title='режим резактирования'><i class='fa fa-edit'></i></button>
        <button type='button' id='btnEditAllCancel' class='btn btn-default' data-toggle='tooltip' title='отмена редактирования' style="display: none"><i class='fa fa-undo'></i></button>
    </th>
    @if (IsTransneft)
    {
        <th secol="secol">Бренд</th>
    }
    <th style="width: 120px;">Каталожный номер</th>
    @if (IsTransneft)
    {
        <th>Наименование</th>
        <th>Замена</th>
    }
    else
    {
        <th style="width: 200px;">Ответ</th>
    }
    
    <th style="width: 80px;">Цена B2B</th>
    <th style="width: 80px;">Цена USD</th>
    <th style="width: 80px;">Цена EUR</th>
    <th style="width: 80px;">Цена EUR Ricoh</th>
    <th style="width: 80px;">Цена руб</th>
    <th secol="secol">Поставщик</th>
    <th>Срок поставки</th>
    <th secol="secol">Факт защиты</th>
    <th secol="secol">Условия защиты</th>
    <th secol="secol">Комментарий</th>
    <th>
        <button type='button' id='btnSaveAllCalc' class='btn btn-success ' data-toggle='tooltip' title='сохранить все' cpid="@Model.Id" style="display: none"><i class='fa fa-save'></i></button>
    </th>
</tr>
