@model SpeCalc.Models.QuePosAnswer
          <div>
    @using (Html.BeginForm("AddPosAnswer", "Question", FormMethod.Post, new { @class = "form-inline", data_toggle = "validator", role = "form" }))
    {
        @Html.HiddenFor(m => m.QuePosition.Question.Id)
        @Html.HiddenFor(m => m.QuePosition.Id)
        <div class="form-group">
            <div class="col-lg-11">
                @Html.TextAreaFor(m => m.Descr, new { @class = "form-control required-mark input-sm", @id = "newPosAnswer", required = "required", data_error = "Заполните ответ", @placeholder = "Текст ответа", @style="width: 500px", @rows="2" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-1">
                <button class="btn btn-primary btn-xs">сохранить ответ</button>
            </div>
        </div>
    }
</div>
