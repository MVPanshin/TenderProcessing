@using SpeCalc.Helpers
@using SpeCalc.Models
@using SpeCalc.Objects
@model IEnumerable<SpeCalc.Models.QuePosAnswer>

@if (Model.Any())
{
    <ul>
        @{ int i = 0;}
        @foreach (var ans in Model)
        {
            <li>
                @{ int queState = Question.GetQuestionCurrState(ans.QuePosition.Question.Id).OrderNum;}
                @if (AdHelper.UserInGroup(User, AdGroup.SpeCalcProduct) && (queState == 2 || queState == 3))
                {
                    <button class="btn btn-link" name="delele-ans" ansid="@ans.Id" data-toggle="tooltip" title="удалить ответ">
                        <i class="fa fa-trash"></i>
                    </button>
                }
                @ans.Descr
            </li>

            @*<tr>
                    <td>@i</td>
                    <td>
                        @ans.Descr
                    </td>
                    <td class="min-width">
                        <button class="btn btn-link" name="delele-ans" ansid="@ans.Id" data-toggle="tooltip" title="удалить"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>*@
        }
    </ul>
}

