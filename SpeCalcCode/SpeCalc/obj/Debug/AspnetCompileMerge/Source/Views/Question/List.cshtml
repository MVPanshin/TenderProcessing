@using TenderProcessing.Models
@using TenderProcessing.Objects
@model TenderProcessing.Models.QuestionFilter

@{
    ViewBag.Title = "Список вопросов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default" id="filter">
    <div id="filterPanel" class="panel-collapse collapse">
        <div class="panel-body">
            @using (Html.BeginForm("List", "Question", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">ID</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @id = "fQueId" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Менеджер</label>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.Manager.AdSid, DbList.GetManagerSelectionList(), "--выберите--", new { @class = "form-control", @id = "fManager" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Продакт/Снабженец</label>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.Product.AdSid, DbList.GetProductManagerSelectionList(), "--выберите--", new { @class = "form-control", @id = "fProd" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Статус</label>
                    <div class="col-sm-5">
                        <ul class="form-control list-inline">
                            @for (int i = 0; i < Model.States.Count(); i++)
                            {
                                <li>
                                    @Html.CheckBoxFor(m => m.States[i].Checked, new { id = "fQueState_" + i })
                                    @Html.HiddenFor(m => m.States[i].Id)
                                    @Html.HiddenFor(m => m.States[i].Name)
                                    @Html.DisplayFor(m => m.States[i].Name)
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Показать записей</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.Top, new { @class = "form-control", @id = "fTop" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button id="find" class="btn btn-primary" name="action:QueFilter"><i class="fa fa-search"></i>&nbsp;найти</button>
                        <button id="clearFilter" class="btn btn-default" name="action:QueFilterClear"><i class="fa fa-repeat"></i>&nbsp;очистить</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="filterHead" class="panel-heading">
        <div class="panel-title collapsed" data-toggle="collapse" data-target="#filterPanel">
            <a class="title"><i class="fa fa-filter"></i></a>
        </div>
    </div>
</div>

